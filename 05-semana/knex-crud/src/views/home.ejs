<%- include('./components/header') %>
<h1>
  Pessoas
  <a href="/pessoas/create" class="btn btn-primary">➕ Adicionar Pessoa</a>
</h1>
<table class="table table-hover table-bordered">
  <tr>
    <th>ID</th>
    <th>Nome</th>
    <th>Cargo</th>
    <th>Ações</th>
  </tr>
  <% pessoas.map(pessoa => { %>
  <tr>
    <td><%=pessoa.id%></td>
    <td><%=pessoa.nome%></td>
    <td><%=pessoa.cargo%></td>
    <td>
      <div class="btn-group" role="group">
        <a
          type="button"
          href="/pessoas/update/<%=pessoa.id%>"
          class="btn btn-primary stretched-link text-light"
        >
          Editar
        </a>
        <a
          type="button"
          href="/pessoas/delete/<%=pessoa.id%>"
          class="btn btn-danger stretched-link text-light"
        >
          Excluir
        </a>
      </div>
    </td>
  </tr>
  <% }) %>
</table>

<%-include('./components/footer') %>
