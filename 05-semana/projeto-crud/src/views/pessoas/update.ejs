      />
    </div>
    <div class="form-group">
      <label for="nascimento">Nascimento *</label>
      <input
        type="text"
        class="form-control"
        id="nascimento"
        name="nascimento"
        aria-describedby="nascimento"
        value="<%= pessoa.nascimento %>"
      />
    </div>
    <div class="form-group">
      <label for="cargo">Cargo *</label>
      <input
        type="text"
        class="form-control"
        id="cargo"
        name="cargo"
        aria-describedby="cargo"
        value="<%= pessoa.cargo %>"
      />
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
  </form>
</div>
