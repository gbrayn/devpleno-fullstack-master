<%- include ('../header') %>
<h2 id="open-roles">
  Editar vaga:
  <a href="/admin/vagas">Vagas</a>
</h2>
<div>
  <form method="POST">
    <label>Titulo vaga:</label>
    <input type="text" name="titulo" value="<%= vaga.titulo %>">
    <label>Descricao vaga:</label>
    <textarea name="descricao" id="" cols="30" rows="10"><%= vaga.descricao %></textarea>
    <label>Categoria vaga:</label>
    <select name="categoria">
      <% categorias.forEach(categoria => { %> 
        <option 
          value="<%= categoria.id %>" 
          <% if (categoria.id === vaga.categoria) { %> selected <% } %>
        >
          <%= categoria.categoria %>
        </option>
      <% }) %>
    </select>
    <button type="submit">Salvar vaga</button>
  </form>
</div>
<%- include('../footer') %>
</html>
